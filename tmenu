####################################################################################################
# VARIABLES
####################################################################################################
[ ! -f "$TMENU_FILE" ] && { echo "No menu file informed!"; exit 1; }
TYAML_COMMAND="tyaml $TMENU_FILE"
menu_prompt=$($TYAML_COMMAND -k)
current_path=$menu_prompt
version=0.4.0
extended=false

CACHE=${XDG_CACHE_HOME:-"$HOME/.cache"}/tmenu_cache
if [ ! -d "`dirname "$CACHE"`" ]; then
    CACHE=$HOME/.tmenu_cache
fi
(
	IFS=:
	if stest -dqr -n "$CACHE" $PATH; then
		stest -flx $PATH | sort -u > "$CACHE"
	fi
)
####################################################################################################
# Functions
####################################################################################################

check_sub_item()
{
  selected_tag="$1"
  current_path+=".$selected_tag"

  sub_item="$($TYAML_COMMAND -k $current_path)"

  if [[ -z "$sub_item" ]];
  then
    command="$($TYAML_COMMAND -v $current_path)"
    if [ -z "$command" ] && [ ! -z "$selected_tag" ]; then
        echo "$selected_tag" | /bin/sh &
    elif [ "${command[@]}" != "null" ]; then
        echo "${command[@]}" | /bin/sh &
    fi
  else
    menu_prompt="$selected_tag"
    display_items
  fi
}

list_items()
{
    wmctrl -l | awk '$3=$2=""; {print}'
    $TYAML_COMMAND -k $current_path
    ( $extended  && [ -f "$CACHE" ] && cat "$CACHE" )
}

display_items()
{
  tag_selected="$(list_items | dmenu -p $menu_prompt -l 10 -c)"
  if [ -n "$(echo $tag_selected | awk '{print $2}')" ];then
    activate_window "$tag_selected"
  else
    [ -z "$tag_selected" ] || check_sub_item "$tag_selected"
  fi

}

activate_window()
{
    client="$1"
    client_name="$(echo "$client" | awk '$1=""; {print}' | cut -c 2-)"
    client_pid="$(echo "$client" | awk '{print $1}')"
    client_pid_scratchpad=$(grep "$client_pid" /tmp/dwm_scratchpad 2> /dev/null | awk '{print $1}')

    # Check if client is in scratchpad
    # If it is, send a signal to dwm (depends on dwmc patch)
    # If it is not use wmctrl
    if [ -z "$client_pid_scratchpad" ]; then
        wmctrl -a "$client_name"
    else
        xsetroot -name "fsignal:scratchpad_show v $client_pid"
    fi
}

usage()
{
    echo "usage: tmenu [-hve]"
    echo "e.g: export TMENU_FILE=quick_menu.yaml; tmenu"
    echo "options:"
    echo "-v: prints version information to stdout, then exits;"
    echo "-e: lists your menu file entries along with your binaries at your \$PATH variable;"
    echo "-h: shows this usage message."
}

parse_arguments()
{
    while getopts "hve" args; do
        case "${args}" in
            h) usage; exit 0 ;;
            v) echo "$version"; exit 0 ;;
            e) extended=true ;;
            *) usage; exit 1 ;;
        esac
    done
}

####################################################################################################
# Execute dmenu for the first time
####################################################################################################

[ -z "$(which wmctrl)" ] && echo '"wmctrl" not found.' && exit 1
[ -z "$(which tyaml)" ] && echo '"tyaml" not found.' && exit 1

parse_arguments "$@"
display_items
